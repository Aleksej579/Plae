//button
.wrapSend
    display flex
    flex-direction row
    justify-content center
    align-items center

#input
    height 43px
    width 310px
    border-radius 22px 0 0 22px
    border none
    padding-left 50px


#button
    height 45px
    width 165px
    background #20ab50
    border none
    color white
    font-size 20pt
    font-family 'Nunito-Regular'
    border-radius 0 22px 22px 0
    cursor pointer

#button:hover
    background none
    background-color rgba(32,171,80, 0.5)
    border 3px solid #20ab50